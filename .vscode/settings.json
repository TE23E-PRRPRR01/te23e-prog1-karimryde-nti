{
    "workbench.colorTheme": "Default Light+",
    "workbench.iconTheme": "vscode-great-icons",
    "workbench.colorCustomizations": {
        "activityBar.background": "#2a1a3f",
        "activityBar.foreground": "#ffffff",
        "activityBar.activeBackground": "#5b308f",
        "titleBar.activeBackground": "#5b308f",
        "titleBar.activeForeground": "#b197cc",
        "window.activeBorder": "#5b308f",
        "window.inactiveBorder": "#776c85",
    },
    "workbench.editorAssociations": {
        "*.md": "vscode.markdown.preview.editor"
    },
    "editor.codeLens": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "explorer.compactFolders": false,
    "explorer.sortOrderLexicographicOptions": "unicode",
    "files.autoSave": "afterDelay",
    "files.associations": {
        "*.xaml": "xml"
    },
    "[xml]": {
        "editor.defaultFormatter": "redhat.vscode-xml"
    },
    "git.openRepositoryInParentFolders": "always",
    "git.postCommitCommand": "sync",
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    "csharp.suppressBuildAssetsNotification": true,
    "csharp.debug.console": "externalTerminal",
    "redhat.telemetry.enabled": false,
    "sessionlogger.enabled": false,
    "dotnet.codeLens.enableReferencesCodeLens": false,
}
